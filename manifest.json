{
  "manifest_version": 3,
  "name": "Reflow – ChatGPT Navigator",
  "version": "1.0.1",
  "description": "AI-powered real-time guide for ChatGPT — helps you navigate every feature with step-by-step guidance",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://fvqlqyiewokyzgmvbzrr.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "lib/html2canvas.min.js",
        "content/namespace.js",
        "content/chatgpt-knowledge.js",
        "content/dom-extractor.js",
        "content/selector-engine.js",
        "content/stability.js",
        "content/highlight.js",
        "content/planner.js",
        "content/guide-ui.js",
        "content/state-machine.js",
        "content/main.js"
      ],
      "css": ["styles/guide.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "assets/*"],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
